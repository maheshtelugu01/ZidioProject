package com.nt.rest;

import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.nt.dto.UserSubscriptionStatusDto;
import com.nt.service.IUserSubscriptionStatusService;

@RestController
@RequestMapping("/api/usersubscriptionstatus")
public class UserSubscriptionStatusController {
	@Autowired
	private IUserSubscriptionStatusService statusService;
	@GetMapping("/{email}")
	public ResponseEntity<Optional<UserSubscriptionStatusDto>> getStatus(@PathVariable String email) {
		return ResponseEntity.ok(statusService.getStatusByUserEmail(email));
	}
	@PostMapping("/assign/{planId}")
	public ResponseEntity<String> assignSubscription(@PathVariable Long planId) {
		return ResponseEntity.ok(statusService.activateSubscription(planId));
	}
	@GetMapping("/active/{email}")
	public ResponseEntity<UserSubscriptionStatusDto> getActiveSubscription(@PathVariable String email) {
		return ResponseEntity.ok(statusService.getActiveSubscriptionByEmail(email));
	} 
	
	
}
